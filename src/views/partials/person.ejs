<head>
    <style>
    .person-box {
        border: 2px solid #ccc;
        padding: 10px;
        margin: 0 10px 20px;
        max-width: 300px;
        flex: 1 1 200px;
        box-sizing: border-box;
    }
    </style>
</head>

<div class="person-box">
    <h3> <%= person.name %></h3>
    <p>Number: <%= person.number %></p>
    <p>Dogs: </p>
    <ul>
        <% person.dogs.forEach(function(dog){ %>
            <%- include('dog', {dog: dog}); %>
          <% }); %>
    </ul>
</div>